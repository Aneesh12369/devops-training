pipeline {
    
    agent any
    
    options {
        disableConcurrentBuilds()
    }
    
    stages {
        
        stage('Build') {
        	steps {
	            sh 'mvn -f spring-boot-demo/pom.xml clean install -DskipTests'
	        }   
        }
        
        stage('Unin Tests') {
        	steps {
	            sh 'mvn -f spring-boot-demo/pom.xml clean install'
	        }   
        }
        
        stage('Sonar Scan') {
        	// def scannerHome = tool 'sonar-scanner'
        	//steps{
